<div class="container-fluid bg-3 text-center margin-right-5-percent margin-left-5-percent margin-bottom-40 min-height-500">
  <div class="row">
    <% unless @recipes.present? %>
      <% flash.each do |type, msg| %>
         <div class="col-sm-12 col-md-12 col-lg-12 notification-error" >
            <%= msg %>
        </div>
      <% end %>
    <% else %>
      <% @recipes.each do |recipe| %>
        <div class="col-sm-3 col-md-3 col-lg-3 margin-top-30 margin-left-50 white-bg recipe-alignment">
          <% if recipe.fields.keys.include?(:photo) %>
            <div class='row'>
              <a href="<%= recipe_path(id: recipe.id)%>">
                <img src="https:<%= recipe.photo.url%>" width="100%">
              </a>
            </div>
          <% end %>
          <% if recipe.fields.keys.include?(:title) %>
          <div class="row margin-bottom-10 title-adjustment dont-break-out">
            <span>
              <a href="<%= recipe_path(id: recipe.id)%>"><%= recipe.title %></a>
            </span>
          </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
